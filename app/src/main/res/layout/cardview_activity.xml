<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serviceCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_light"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageActivityCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card_service"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/image_font_island"
                android:contentDescription="@string/description_logo"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/backgroundCard"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/nameActivityCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_title_card"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateStartActivityCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicio:"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_name_card"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dateStartActivityCardViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_name_card" />

                    <TextView
                        android:id="@+id/timeStartActivityCardViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_name_card" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateEndActivityCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fin:"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_name_card"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dateEndActivityCardViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_name_card" />

                    <TextView
                        android:id="@+id/timeEndActivityCardViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_name_card" />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descriptionActivityCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n:"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/descriptionActivityCardViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_name_card"
                android:textColor="@color/primary_text"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
