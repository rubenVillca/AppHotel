<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serviceCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="@dimen/corner_radius_cardview">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary_light"
            android:orientation="horizontal"
            android:weightSum="1"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/imageConsumeServiceCardView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/img_history_4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/serviceConsumeServiceCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_primary"
                    android:text="servicios x"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>

                <TextView
                    android:id="@+id/dateConsumeServiceCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/0000"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/primary_text"/>

                <TextView
                    android:id="@+id/timeConsumeServiceCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/priceConsumeServiceCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/primary_text"/>

                <TextView
                    android:id="@+id/stateConsumeServiceCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminado"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/primary_text"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>