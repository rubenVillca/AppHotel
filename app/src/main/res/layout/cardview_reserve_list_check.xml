<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkReserveCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:paddingTop="10sp"
    cardview:cardCornerRadius="@dimen/corner_radius_cardview">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/checkReserveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary_light"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <View
                android:layout_width="3sp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp"
                android:background="@color/divider"
                android:layout_marginStart="8sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8sp"
                android:paddingRight="8sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0sp"
                    android:layout_margin="0sp">

                    <ImageView
                        android:id="@+id/imageReserveList"
                        android:layout_width="248sp"
                        android:layout_height="148sp"
                        android:src="@drawable/image_reserve"
                        android:contentDescription="@string/description_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3sp"
                        android:text="@string/reserveDateIn"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:paddingEnd="3sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/checkReserveInTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:id="@+id/btnPlusReserveCardView"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:background="@drawable/ic_plus"
                            android:contentDescription="@string/description_logo" />

                        <ImageView
                            android:id="@+id/btnCancelReserveCardView"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:background="@drawable/ic_cancel"
                            android:contentDescription="@string/description_logo" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3sp"
                        android:text="@string/reserveDateOut"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:paddingEnd="3sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/checkReserveOutTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3sp"
                        android:text="@string/reserveTotalPrice"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:paddingEnd="3sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/checkReserveCostTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/primary_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3sp"
                        android:text="@string/reserveDatePay"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:paddingEnd="3sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/checkReserveDeposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3sp"
                        android:text="@string/reserveTargetVerified"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:paddingEnd="3sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/checkReserveVerifyTarget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3sp"
                        android:text="@string/reserveState"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:paddingEnd="3sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/checkReserveState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"/>

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/consumeReserveRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>