<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_homefragment_icon">

                <ImageButton
                    android:id="@+id/imageProfile"
                    android:layout_width="@dimen/dimen_home_icon_heigth"
                    android:layout_height="@dimen/dimen_home_icon_heigth"
                    android:background="@drawable/img_profile"
                    android:contentDescription="@string/description_logo" />

                <TextView
                    android:id="@+id/textProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_home_icon_profile"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_primary_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_homefragment_icon">

                <ImageButton
                    android:id="@+id/imageHistory"
                    android:layout_width="@dimen/dimen_home_icon_heigth"
                    android:layout_height="@dimen/dimen_home_icon_heigth"
                    android:background="@drawable/img_history_3"
                    android:contentDescription="@string/description_logo" />

                <TextView
                    android:id="@+id/textHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_home_icon_history"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_primary_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_homefragment_icon">

                <ImageButton
                    android:id="@+id/imageAbout"
                    android:layout_width="@dimen/dimen_home_icon_heigth"
                    android:layout_height="@dimen/dimen_home_icon_heigth"
                    android:background="@drawable/img_about_1"
                    android:contentDescription="@string/description_logo" />

                <TextView
                    android:id="@+id/textAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_home_icon_about"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_primary_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_homefragment_icon">

                <ImageButton
                    android:id="@+id/imageFrequently"
                    android:layout_width="@dimen/dimen_home_icon_heigth"
                    android:layout_height="@dimen/dimen_home_icon_heigth"
                    android:background="@drawable/img_question"
                    android:contentDescription="@string/description_logo" />

                <TextView
                    android:id="@+id/textFrequently"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_home_icon_frequently"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_primary_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_homefragment_icon">

                <ImageButton
                    android:id="@+id/imageContact"
                    android:layout_width="@dimen/dimen_home_icon_heigth"
                    android:layout_height="@dimen/dimen_home_icon_heigth"
                    android:background="@drawable/img_message"
                    android:contentDescription="@string/description_logo" />

                <TextView
                    android:id="@+id/textContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_home_icon_message_send"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_primary_home" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
